
@{
    ViewBag.Title = "CadastrarCurso";
}

<h2>Cadastrar Curso</h2>
<hr />

<div>
    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.Label("Título")
            @Html.TextBox("Titulo")
        </div>

        <div class="form-group">
            @Html.Label("Descrição")
            @Html.TextBox("Descricao")
        </div>

        <div class="form-group">
            @Html.Label("Valor")
            @Html.TextBox("Valor")
        </div>



        <input class="btn btn-primary" type="submit" value="Salvar" />
    }
</div>

